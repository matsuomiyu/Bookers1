<div>
  <%= flash[:notice] %>
</div>
<h1>Books</h1>
  <table>
   <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
   </thead>
   <% @books.each do |book| %>
    <tbody>
     <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td><span><%= link_to "Show", book_path(book.id) %></span></td>
       <td><span><%= link_to "Edit", edit_book_path(book.id) %></span></td>
       <td><span><%= link_to "Destroy", book_path(book), method: :delete %></span></td>
     </tr>
    </tbody>
   <% end %>
  </table>

<h2>New book</h2>
<% if @book.errors.any? %>
 <div id="errors_explanation">
  <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= messag %></li>
    <% end %>
  </ul>
 </div>

<% end %>

<%= form_with model: @book do |f| %>
  <div class="field">
    <%= f.label :title,"Title" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body,"Body" %>
    <%= f.text_area :body %>
    <div class="actions">
    <%= f.submit 'Create Book' %>
    </div>
  </div>
<% end %>
